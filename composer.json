{
    "name": "laraveldesign/like-button",
    "description": "Adds a Like button to your Laravel Installation",
    "keywords": [
        "laraveldesign",
        "like-button"
    ],
    "homepage": "https://github.com/laraveldesign/like-button",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Shane Barron",
            "email": "cshanebarron@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {

    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {

        "psr-4": {
            "Laraveldesign\\LikeButton\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Laraveldesign\\LikeButton\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Laraveldesign\\LikeButton\\LikeButtonServiceProvider"
            ],
            "aliases": {
                "LikeButton": "Laraveldesign\\LikeButton\\LikeButtonFacade"
            }
        }
    }
}
